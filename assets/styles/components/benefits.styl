.benefits {
  max-width: content-width;
  padding: 50px 0;
  margin: 0 auto;

  @media (min-width: is_tablet) {
    padding: 100px 0;
  }
}

.benefits-details {
  flex: 0 0 100%;
  flex-wrap: wrap;
  display: flex;
  align-items: center;
  padding-bottom: 40px;
  justify-content: center;

  &__image-wrapper {
    justify-content: center;
  }

  &__text {
    flex: 0 0 100%;
    text-align: left;

    @media (min-width: is_tablet) {
      margin-left: 5px;
      flex: 0 0 60%;
    }

    @media (max-width: is_tablet) {
      h3 {
        margin-top: 25px;
      }
    }
  }

  &__image {
    &--desktop {
      width: 150px;
      height: auto;

      @media (min-width: is_tablet) {
        display: block;
      }

      align-items: center;
    }
  }
}

.benefits__overlay {
  max-width: 760px;
  margin: 0 auto;
  width: 100%;
  height: 400px;
  display: flex;
  flex-flow: column;
  justify-content: center;
  padding: 0 side_padding;
  text-align: center;

  &-title {
    text-align: center;
    font-size: 22px;
  }

  &-text {
    font-size: 18px;
    margin: 20px 30px 35px 30px;
    text-align: center;
  }

  @media (min-width: is_tablet) {
    height: 300px;
    padding: 0 14%;

    &-title {
      text-align: left;
      margin: 10px 35px 10px 30px;
      font-size: 24px;
      line-height: 34px;
      border-bottom: 2px solid orange-dark;
    }

    &-text {
      text-align: left;
      margin-top: 20px;
      font-size: 15px;
    }
  }
}
