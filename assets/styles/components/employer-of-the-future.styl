.employer-of-the-future {
  max-width: content-width;
  padding: 2rem 1.75rem 4rem;
  margin: 0 auto;
	text-align: center;

	p {
		margin: 1.5rem 0;
	}

  @media (min-width: is_tablet) {
    padding: 100px 2.3rem;
  }
}

.employer-of-the-future-details {
  flex: 0 0 100%;
  flex-wrap: wrap;
  display: flex;
  align-items: center;
  padding-bottom: 40px;
  justify-content: center;

  &__image-wrapper {
    justify-content: center;
  }

  &__image {
      width: 100%;
      height: auto;
			margin-top: 2rem;

      @media (min-width: is_tablet) {
        display: block;
      }
      align-items: center;
    }
}