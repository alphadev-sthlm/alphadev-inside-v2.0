.footer {

}

.footer__top {
  width: content-width;
  margin: 0 auto;
  text-align: center;
  padding: 100px 0;
}

.footer__bottom {
  background-color: green;
  padding: 40px;
  color: white;
}

.footer__title {
  max-width: 400px;
  display: inline-block;
}

.footer__map {
  background-image: url("/europakarta.svg");
  background-repeat: no-repeat;
  background-position-y: -30px;
  width: 100%;
  height: 560px;
  position: relative;
}

.map-circle {
  top: 50%;
  left: 50%;
  position: absolute;
  &--one {
    transform: translate(-51px, -76px);
  }
  &--two {
    transform: translate(15px, 90px);
  }
  &--three {
    transform: translate(-99px, 121px);
  }
  &--four {
    transform: translate(-100px, 55px);
  }
  &--five {
    transform: translate(-195px, 108px);
  }  
}

.contact {
  width: 320px;
  margin: 0 auto;
  text-align: center;
  font-family: 'Montserrat Medium';
}

.contact__logo {
  margin: 0 auto 25px;
  background-image: url("pratbubbla.svg");
  background-repeat: no-repeat;
  height: 49px;
  width: 45px;
}

.contact__adress {
  margin-bottom: 3px;
}

.contact__info {
  margin-bottom: 28px;
}

.contact__info-tel {
  margin-right: 10px;
}

.contact__social {
  a {
    text-decoration: none;
  }
  .social-facebook {
    background-image: url("facebook.svg");
    height: 22px;
    width: 10px;
    display: inline-block;
  }
  .social-twitter {
    background-image: url("twitter.svg");
    height: 22px;
    width: 27px;
    display: inline-block;
    margin-right: 20px;
  }
  .social-instagram {
    background-image: url("instagram.svg");
    height: 22px;
    width: 22px;
    display: inline-block;
    margin-right: 20px;
  }
  .social-linkedin {
    background-image: url("linkedin.svg");
    height: 22px;
    width: 23px;
    display: inline-block;
    margin-right: 20px;
  }
}

circle {
  stroke: orange; 
  fill: orange;
  stroke-width: 2px;
  stroke-opacity: 1;
}

.pulse {
  fill: white;
  fill-opacity: 0;
  transform-origin: 50% 50%;
  animation-duration: 2s;
  animation-name: pulse;
  animation-iteration-count: infinite;
}

@keyframes pulse {
  from {
    stroke-width: 3px;
    stroke-opacity: 1;
    transform: scale(0.3);
  }
  to {
    stroke-width: 0;
    stroke-opacity: 0;
    transform: scale(2);
  }
}