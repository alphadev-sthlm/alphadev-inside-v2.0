
.header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100px;
}

.header__wrapper {
  padding: 0 100px;
  margin: 0 auto;
  display: flex;
}

.header__logo {
  height: 100px;
  width: 200px;
}

.header__nav {
  display: none;
  @media (min-width: is_tablet) {
    display: inline-block;
  }
  text-align: center;
  margin-left: 100px;
  flex: 1 1 100%;
}

.header__link {
  display: inline-block;
  text-transform: uppercase;
  text-decoration: none;
  margin: 0 15px;
  line-height: 100px;
  color: white;
}
