<section id="benefits" class="benefits section">
  <div class="benefits__usps">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {{#each usps}}
        <div class="swiper-slide">
          <div class="benefits-details">
            <div class="benefits-details__image-wrapper">
              <img class="benefits-details__image--desktop" src="{{this.image}}">
            </div>
            <div class="benefits-details__text">
              <h2 class="benefits__overlay-title">{{this.title}}</h2>
              <p class="benefits__overlay-text">{{{this.text}}}</p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev swiper-button-black"></div>
      <div class="swiper-button-next swiper-button-black"></div>
    </div>
  </div>
</section>